---
/* No props */
---

<section class="stats-strip" role="region" aria-label="Key service metrics">
  <ul class="stats-list">
    <li class="stat-item">
      <span class="stat-value">21,000+</span>
      <span class="stat-label">Veterans&nbsp;Served</span>
    </li>
    <li class="stat-item">
      <span class="stat-value">20 – 30%</span>
      <span class="stat-label">Avg. Rating Increase</span>
    </li>
    <li class="stat-item">
      <span class="stat-value">100%</span>
      <span class="stat-label">Dedicated&nbsp;to&nbsp;Veterans</span>
    </li>
    <li class="stat-item">
      <span class="stat-value">24&nbsp;/&nbsp;7</span>
      <span class="stat-label">Availability</span>
    </li>
  </ul>

  <style>
    .stats-strip {
      background:var(--color-bg);
      border-top:1px solid var(--color-border);
      border-bottom:1px solid var(--color-border);
      padding:2.5rem 1rem;
    }
    .stats-list {
      --gap:3rem;
      display:flex;
      flex-wrap:wrap;
      justify-content:center;
      gap:var(--gap) var(--gap);
      max-width:70rem;
      margin:0 auto;
      list-style:none;
      padding:0;
    }
    .stat-item {
      flex:1 1 12rem;
      text-align:center;
      animation:fade-slide-in .8s ease-out both;
    }
    .stat-value {
      display:block;
      font-size:clamp(1.75rem, 3vw + 1rem, 2.5rem);
      font-weight:800;
      color:var(--color-primary);
      line-height:1.1;
    }
    .stat-label {
      display:block;
      font-size:1rem;
      font-weight:600;
      color:var(--color-text);
      letter-spacing:.02em;
      margin-top:.25rem;
    }
  </style>
</section>
