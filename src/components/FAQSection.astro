    <script>
        // JavaScript to allow only one accordion item to be open at a time.
        const accordions = document.querySelectorAll('.accordion-item') as any;

        accordions.forEach((accordion: any) => {
            accordion.addEventListener('toggle', (e: any) => {
                if (e.target.open) {
                    accordions.forEach((otherAccordion: any) => {
                        if (otherAccordion !== e.target) {
                            otherAccordion.open = false;
                        }
                    });
                }
            });
        });
    </script>